  (cond ((= count 0) b)
        ((even? count)
         (fib-iter a
                   b
                   p
                   q
                   (/ count 2)))
        (else (fib-iter (+ (* b q) (* a q) (* a p))
                        (+ (* b p) (* a q))
                        p
                        q
                        (- count 1)))))

